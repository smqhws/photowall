.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    .navbar-header
        button.navbar-toggle(type="button",data-toggle="collapse",data-target="#navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='#') Photo Wall       
    #navbar-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav
            li.active
                a(href='/') Home
            li.dropdown
                a#photo-menu.dropdown-toggle(role='button',data-target="#",data-toggle='dropdown') Photo
                    span.caret
                ul.dropdown-menu(role="menu",aria-labelledby="photo-menu")
                    li
                        a(href='/photo') All
                    li
                        a(data-toggle='modal',data-target='#upload-modal') New
            li
                a(href='/user') User
            li
                a(href='#') About
        ul.nav.navbar-nav.navbar-right
            li.dropdown(ng-show='user.profile')
                a#user-menu.dropdown-toggle(role='button',data-target="#",data-toggle='dropdown') {{user.name}}
                    span.caret
                ul.dropdown-menu(role="menu",aria-labelledby="user-menu")
                    li
                        a(href='/juser/logout') Logout

            li(ng-show='!user.profile')
                a(data-toggle='modal',data-target='#user-modal') Login
        //
            form.navbar-form.navbar-right(role="search")
                .input-group
                    input.form-control(type='text')
                    span.input-group-btn
                        button.btn.btn-default(type='button') 
                            span.glyphicon.glyphicon-search
        
