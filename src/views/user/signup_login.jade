extends ../layout

block title
    title= title
block content
    .row
        .span6
            form.form-horizontal(action=action,method='post')
                .control-group
                    label.control-label With a local account
                .control-group
                    label.control-label(for='email')	Email
                    .controls
                        input#email(type='text',placeHolder="Email",name='email')
                .control-group
                    label.control-label	Password
                    .controls
                        input#password(type='password',placeHolder='password',name='password')
                .control-group
                    .controls
                        button.btn(type='submit')= submitBtn
        -if(submitBtn==='Log in')
            .span4.offset1
                form.form-horizontal
                    .control-group
                        label.control-label With a social account
                    .row
                        a.btn.span1(href='baidu') Baidu
                        a.btn.span1(href='#') Tencent
                    .row
                        a.btn.span1(href='#') Weibo
                        a.btn.span1(href='#') Renren
block script