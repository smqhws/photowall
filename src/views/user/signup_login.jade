extends ../layout

block title
    title= title
block content
    .row
        .span8.offset2
            form.form-horizontal(action=action,method='post')
                .control-group
                    label.control-label(for='email')	Email
                    .controls
                        input#email(type='text',placeHolder="Email",name='email')
                .control-group
                    label.control-label	Password
                    .controls
                        input#password(type='password',placeHolder='password',name='password')
                .control-group
                    .controls
                        button.btn(type='submit')= submitBtn
block script