extends ../layout

block title
	title= title
block content
	form.form-horizontal(action='create',method='post')
		.control-group
			label.control-label(for='email')	*Email
			.controls
				input#email(type='text',placeHolder="Email",name='email')
		.control-group
			label.control-label(for='phone')	Phone
			.controls
				input#phone(type='text',placeHolder="Phone",name='phone')
		.control-group
			label.control-label	Password*
			.controls
				input#password(type='password',placeHolder='password',name='password')
		.control-group	
			.controls
				button.btn(type='submit') Sign up
	.fade.in.alert.alert-error
		button.close(type='button',data-dismiss='alert') &times;
		!= '<strong>Error!</strong>'+ errs.email.type
block script